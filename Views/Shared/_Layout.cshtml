<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - parcial2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/parcial2.styles.css" asp-append-version="true" />
    <style>
        /* Agregamos estilos personalizados */
        .navbar-nav {
            width: 90%;
            display: flex;
            justify-content: center;
            margin-left: 10%;
        }

        .navbar-nav .nav-item {
            text-align: center;
            margin: 10px 20px; /* Ajusta los valores de margen según tus preferencias */
        }

        .nav-link-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .exclusive-text {
            font-size: 0.8em;
            color: #888;
        }

        /* Mueve _LoginPartial al margen superior derecho */
        .ml-auto {
            margin-left: auto !important;
        }
    </style>
</head>
<body style="background-color: #f8f9fa;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link-container">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Footwear" asp-action="Product">Calzados</a>
                                
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link-container">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Footwear" asp-action="Index">Alta de Calzados</a>
                                <span class="exclusive-text">(Exclusivo para usuarios)</span>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link-container">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index">Alta de Tiendas</a>
                                <span class="exclusive-text">(Exclusivo para usuarios)</span>
                            </div>
                        </li>
                    </ul>
                    <div class="ml-auto"> <!-- Mueve _LoginPartial al margen superior derecho -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
